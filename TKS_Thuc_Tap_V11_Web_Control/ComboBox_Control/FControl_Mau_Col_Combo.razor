@inherits FBase_Combo;

<TelerikMultiColumnComboBox @bind-Value="@BindingStringValue"
							ScrollMode="@DropDownScrollMode.Virtual"
							Data="@m_arrData"
							ValueField="@(nameof(CCombo_Enum.Text))"
							TextField="@(nameof(CCombo_Enum.Text_Value))"
							Width="100%"
							PageSize="10"
							ItemHeight="35"
							Filterable="true"
							FilterOperator="@StringFilterOperator.Contains"
							ListHeight="260px">
	<MultiColumnComboBoxColumns>
		<MultiColumnComboBoxColumn Field="@nameof(CCombo_Enum.Text)" Title="@Get_Language_Data_Field("Title")" Class="k-tks-combobox-item" HeaderClass="k-tks-combobox-header" />
	</MultiColumnComboBoxColumns>
</TelerikMultiColumnComboBox>

@code {
    private List<CCombo_Enum> m_arrData = new List<CCombo_Enum>();

    protected override void Init_Data()
    {
		m_arrData.Clear();
		m_arrData.Add(new CCombo_Enum { Text_Value = "Yellow", Text = "Yellow" });
		m_arrData.Add(new CCombo_Enum { Text_Value = "Orange", Text = "Orange" });
		m_arrData.Add(new CCombo_Enum { Text_Value = "Gray", Text = "Gray" });
		m_arrData.Add(new CCombo_Enum { Text_Value = "Red", Text = "Red" });
		m_arrData.Add(new CCombo_Enum { Text_Value = "YellowGreen", Text = "YellowGreen" });
		m_arrData.Add(new CCombo_Enum { Text_Value = "Lightgoldenrodyellow", Text = "Lightgoldenrodyellow" });
    }
}