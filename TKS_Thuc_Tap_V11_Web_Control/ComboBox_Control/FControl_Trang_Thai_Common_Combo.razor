@inherits FBase_Combo;

<TelerikMultiColumnComboBox @bind-Value="@BindingIntValue"
							ScrollMode="@DropDownScrollMode.Virtual"
							Data="@m_arrTrang_Thai_ID"
							ValueField="@(nameof(CCombo_Enum.Value))"
							TextField="@(nameof(CCombo_Enum.Text))"
							Width="100%"
							PageSize="10"
							ItemHeight="35"
							Filterable="true"
							FilterOperator="@StringFilterOperator.Contains"
							ListHeight="260px">
	<MultiColumnComboBoxColumns>
		<MultiColumnComboBoxColumn Field="@nameof(CCombo_Enum.Text)" Title="@Get_Language_Data_Field("Title")" Class="k-tks-combobox-item" HeaderClass="k-tks-combobox-header" />
	</MultiColumnComboBoxColumns>
</TelerikMultiColumnComboBox>

@code {
	List<CCombo_Enum> m_arrTrang_Thai_ID { get; set; } = new();

	protected override void Init_Data()
	{
		m_arrTrang_Thai_ID.Clear();
		m_arrTrang_Thai_ID.Add(new CCombo_Enum { Value = 1, Text = Get_Language_Data_Field("Available") });
		m_arrTrang_Thai_ID.Add(new CCombo_Enum { Value = 1067, Text = Get_Language_Data_Field("Close") });
	}

	protected override void Load_Data()
	{

	}
}
