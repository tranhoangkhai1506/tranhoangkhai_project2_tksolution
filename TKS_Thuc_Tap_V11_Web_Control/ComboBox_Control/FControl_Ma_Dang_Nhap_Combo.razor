@inherits FBase_Combo;

<TelerikMultiColumnComboBox @bind-Value="@BindingValue"
                            ScrollMode="@DropDownScrollMode.Virtual"
                            Data="@m_arrData"
                            ValueField="@(nameof(CSys_Thanh_Vien.Auto_ID))"
                            TextField="@(nameof(CSys_Thanh_Vien.Ma_Dang_Nhap))"
                            Width="100%"
                            PageSize="10"
                            ItemHeight="35"
                            Filterable="true"
                            FilterOperator="@StringFilterOperator.Contains"
                            ListHeight="260px">
    <MultiColumnComboBoxColumns>
        <MultiColumnComboBoxColumn Field="@nameof(CSys_Thanh_Vien.Ma_Dang_Nhap)" Title="@Get_Language_Data_Field("Mã Đăng Nhập")" Width="250px" Class="k-tks-combobox-item" HeaderClass="k-tks-combobox-header" />
        <MultiColumnComboBoxColumn Field="@nameof(CSys_Thanh_Vien.Email)" Title="@Get_Language_Data_Field("Email")" Width="150px" Class="k-tks-combobox-item" HeaderClass="k-tks-combobox-header" />
    </MultiColumnComboBoxColumns>
</TelerikMultiColumnComboBox>

@code {
    List<CSys_Thanh_Vien> m_arrData = new();

    protected override void Load_Data()
    {
        m_arrData = CCache_Thanh_Vien.List_Data();
    }

}