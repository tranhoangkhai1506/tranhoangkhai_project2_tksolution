@inherits FBase_Combo;

<TelerikMultiColumnComboBox @bind-Value="@BindingValue"
                            ScrollMode="@DropDownScrollMode.Virtual"
                            Data="@m_arrData"
                            ValueField="@(nameof(CDM_Chu_Hang.Auto_ID))"
                            TextField="@(nameof(CDM_Chu_Hang.Ten_Viet_Tat))"
                            Width="100%"
                            PageSize="10"
                            ItemHeight="35"
                            Filterable="true"
                            FilterOperator="@StringFilterOperator.Contains"
                            ListHeight="260px">
    <MultiColumnComboBoxColumns>
        <MultiColumnComboBoxColumn Field="@nameof(CDM_Chu_Hang.Ma_Chu_Hang)" Title="@Get_Language_Data_Field("Mã chủ hàng")" Width="150px" Class="k-tks-combobox-item" HeaderClass="k-tks-combobox-header" />
        <MultiColumnComboBoxColumn Field="@nameof(CDM_Chu_Hang.Ten_Viet_Tat)" Title="@Get_Language_Data_Field("Tên viết tắt")" Width="250px" Class="k-tks-combobox-item" HeaderClass="k-tks-combobox-header" />
    </MultiColumnComboBoxColumns>
</TelerikMultiColumnComboBox>

@code {
    List<CDM_Chu_Hang> m_arrData = new();

    protected override void Load_Data()
    {
        m_arrData = CCache_Chu_Hang.List_Data();
        CDM_Chu_Hang v_objCH = new();
        v_objCH.Auto_ID = -5;
        v_objCH.Ten_Viet_Tat = "Tất Cả";
        v_objCH.Ma_Chu_Hang = "Tất Cả";
        m_arrData.Insert(0, v_objCH);
    }

}
