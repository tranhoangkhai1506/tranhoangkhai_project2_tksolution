@inherits FBase_Combo;

<TelerikMultiColumnComboBox @bind-Value="@BindingValue"
							ScrollMode="@DropDownScrollMode.Virtual"
							Data="@m_arrData"
							ValueField="@(nameof(CSys_API_Source_Function.Auto_ID))"
							TextField="@(nameof(CSys_API_Source_Function.Ten_API_Function_Combo))"
							Width="100%"
							PageSize="10"
							ItemHeight="35"
							Filterable="true"
							FilterOperator="@StringFilterOperator.Contains"
							ListHeight="260px">
	<MultiColumnComboBoxColumns>
		<MultiColumnComboBoxColumn Field="@nameof(CSys_API_Source_Function.Ma_API_Function)" Title="@Get_Language_Data_Field("Mã")" Width="150px" Class="k-tks-combobox-item" HeaderClass="k-tks-combobox-header" />
		<MultiColumnComboBoxColumn Field="@nameof(CSys_API_Source_Function.Ten_API_Function)" Title="@Get_Language_Data_Field("Tên")" Width="250px" Class="k-tks-combobox-item" HeaderClass="k-tks-combobox-header" />
	</MultiColumnComboBoxColumns>
</TelerikMultiColumnComboBox>

@code {
	List<CSys_API_Source_Function> m_arrData = new();
	[Parameter]
	public long p_iAPI_Source_ID { get; set; }
	protected override void Load_Data()
	{
		if (p_iAPI_Source_ID != 0)
			m_arrData = CCache_API_Source_Function.List_Data_By_API_Source_ID(p_iAPI_Source_ID);
		else
			m_arrData = CCache_API_Source_Function.List_Data();
	}
}
