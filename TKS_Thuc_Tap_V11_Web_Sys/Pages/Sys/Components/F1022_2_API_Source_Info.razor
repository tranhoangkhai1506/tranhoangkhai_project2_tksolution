@inherits FBase_Info;

<div class="modal fade show" tabindex="-1" role="dialog" aria-hidden="true" style="display: block; padding-left: 0px; background-color: rgba(10, 10, 10, .8);">
	<div class="modal-dialog modal-xl">
		<div class="modal-content">
			<div class="modal-header bg-light">
				<ul class="nav nav-pills card-header-pills" role="tablist">
					<li class="nav-item" role="presentation">
						<a class="nav-link active" data-bs-toggle="tab" href="#thongtin" role="tab" aria-selected="true">
							@Get_Language_Data_Field("Thông tin")
						</a>
					</li>
					<li class="nav-item" role="presentation">
						<a class="nav-link" data-bs-toggle="tab" href="#API_Source_Function" role="tab" aria-selected="false" tabindex="-1">
							@Get_Language_Data_Field("API source function")
						</a>
					</li>

					<li class="nav-item" role="presentation">
						<a class="nav-link" data-bs-toggle="tab" href="#record_action_history" role="tab" aria-selected="false" tabindex="-1">
							@Get_Language_Data_Field("Lịch sử xử lý")
						</a>
					</li>
				</ul>

				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" @onclick="@(()=> Modal_Cancel())">
				</button>
			</div>

			@((MarkupString)r_strError)

			<EditForm Model="@m_objData">
				<div class="modal-body">
					<div class="tab-content">
						<div class="tab-pane active show" id="thongtin" role="tabpanel">
							<div class="row">
							<div class="col-lg-4">
								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("ID")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objData.Auto_ID, true)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Mã API Source")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objData.Ma_API_Source, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Tên API Source")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objData.Ten_API_Source, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Link API")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objData.Link_API, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("User name")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objData.User_Name, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Password")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objData.Password, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Token 1")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objData.Token_1, false)</span>
									</div>
								</div>

							</div>

							<div class="col-lg-4">
								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Token 2")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objData.Token_2, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("ClientID 1")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objData.Client_ID_1, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("ClientID 2")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objData.Client_ID_2, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Ghi chú")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objData.Ghi_Chu, false)</span>
									</div>
								</div>

							</div>

							<div class="col-lg-4">
								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Ngày giờ tạo")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objData.Created, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Người tạo")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objData.Created_By, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Chức năng tạo")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objData.Created_By_Function, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Ngày giờ cập nhật sau cùng")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objData.Last_Updated, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Người cập nhật sau cùng")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objData.Last_Updated_By, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Chức năng cập nhật sau cùng")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objData.Last_Updated_By_Function, false)</span>
									</div>
								</div>

							</div>

							</div>
						</div>
						<div class="tab-pane" id="API_Source_Function" role="tabpanel">
							 <div class="row">
                                <div class="col-lg-12">
									<TelerikGrid Data="@m_arrAPI_Source_Function" Height="300px" Resizable="true" Reorderable="true" @ref="@grdAPI_Source_Function">                                        
                                        <GridColumns>                                                                                   
                                            <GridColumn Field="Ma_API_Function" Title="Mã Function" Width="100px"></GridColumn>
                                            <GridColumn Field="Ten_API_Function" Title="Tên Function" Width="200px"></GridColumn>
                                            <GridColumn Field="Ghi_Chu" Title="Ghi chú" Width="300px"></GridColumn>
                                            <GridColumn Field="" Title=""></GridColumn>
                                        </GridColumns>
                                    </TelerikGrid>
                                </div>
                            </div>



						</div>
						<div class="tab-pane" id="record_action_history" role="tabpanel">
							<FCommon_Record_Action_History_List v_arrData="@m_arrRAH" />
						</div>
					</div>
				</div>
			</EditForm>
		</div>
	</div>
</div>

@code {
	private CSys_API_Source m_objData = new();
	private List<CLog_Record_Action_History> m_arrRAH = new();
	private List<CSys_API_Source_Function> m_arrAPI_Source_Function = new();
	private TelerikGrid<CSys_API_Source_Function> grdAPI_Source_Function = new();

	protected override void Load_Data()
	{
		CSys_API_Source_Controller v_objCtrData = new();
		CLog_Record_Action_History_Controller v_objCtrRAH = new();
		CSys_API_Source_Function_Controller v_objCtrlFunc = new();

		m_objData = v_objCtrData.FQ_501_AS_sp_sel_Get_By_ID(r_iAuto_ID);

		m_arrRAH = v_objCtrRAH.FCommon_Sys_sp_sel_List_Log_Record_Action_History(r_iAuto_ID);
		//_arrAPI_Source_Function= v_objCtrlFunc.F1022_3_List_Sys_API_Source_Function_By_API_Source_ID(m_objData.Auto_ID);
		m_arrAPI_Source_Function = v_objCtrlFunc.FQ_504_ASF_sp_sel_List_By_API_Source_ID(m_objData.Auto_ID);
	}
}
